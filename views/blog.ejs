<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= kuih.name %> - Gembira For Kueh</title>
    <link rel='icon' href='/images/favicon.ico' type='image/x-icon'>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
 
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="beige-theme">
    <div class="header-navbar blog-header">
        <a href="/directory" class="back-link blog-back-link">
            <i class="fas fa-chevron-left fa-2x"></i> <p>Directory</p>
        </a>
        <h1><%= kuih.name %></h1>
        <% if (kuih.puzzle) { %>
            <button id="blog-start-puzzle-start" class="blog-start-button"><a href="/<%= kuih.kuihId %>/puzzle">Start Puzzle</a></button>
            <button id="blog-start-puzzle-icon" class="blog-start-button"><a href="/<%= kuih.kuihId %>/puzzle"><i class="fas fa-dice-d6"></i></a></button>
        <% } %>
    </div>
    
    <img src="/images/allkuih/<%= kuih.kuihId %>.png" alt="<%= kuih.name %>" width="60%">

    <div class="blog-container">
        <h1>Background</h1>
        <p class="about-kuih"><%= kuih.about %></p>
    
        <h1>Recipe</h1>
        <h3>Ingredients</h3>
        <% kuih.ingredients.forEach(ingredients => { %>
            <p class="ingredients-p"><%= ingredients.quantity %> <%= ingredients.name %></p>
        <% }) %>

        <h3>Steps To Prepare</h3>
        <% for( let i = 1; i <= kuih.recipe.length; i++ ) { %>
            <p><%= i %>. <%= kuih.recipe[i-1] %></p>
        <% } %>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    
</body>
</html>